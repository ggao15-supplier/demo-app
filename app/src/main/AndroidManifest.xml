<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.e.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <!--        app中的activity可以在手机的两个task中显示-->
        <activity
                android:name=".views.home.MainActivity"
                android:launchMode="singleTask"
                android:taskAffinity="com.e.myapplication.main" />
        <activity
                android:name="com.e.myapplication.views.login.LoginActivity"
                android:windowSoftInputMode="adjustUnspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.e.myapplication.views.region.WorldMapActivity"
                android:screenOrientation="portrait" />
        <activity
                android:name="com.example.morewindow.MoreWindowActivity"
                android:screenOrientation="portrait" />

        <receiver android:name="com.e.remoteviews.appwidget.PlayerAppWidgetProvider">
            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/appwidget_player_info" />

            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.e.appwiget.player.play" />
                <action android:name="com.e.appwiget.player.pause" />
                <action android:name="com.e.appwiget.player.pre" />
                <action android:name="com.e.appwiget.player.next" />
            </intent-filter>
        </receiver>

        <!--设置service为后台播放音乐的 前台service，用于进程保活-->
        <service
                android:name="com.e.remoteviews.service.PlayerService"
                android:foregroundServiceType="mediaPlayback">
            <!--设置service的权限，用于保活-->
            <intent-filter android:priority="1000">
                <action android:name="com.ge.playservice" />
            </intent-filter>
        </service>
    </application>

</manifest>